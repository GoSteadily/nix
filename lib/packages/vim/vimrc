" CoC Configuration (sets up language servers, formatters)
let g:coc_user_config = {
    \ 'diagnostic.messageTarget': 'echo',
    \ 'languageserver': {
      \ 'elmLS': {
        \ 'command': 'elm-language-server',
        \ 'filetypes': ['elm'],
        \ 'rootPatterns': ['elm.json']
      \ },
      \ 'haskell': {
